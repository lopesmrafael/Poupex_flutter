rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários - só podem acessar seus próprios dados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para movimentações financeiras
    match /movimentacoes/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Regras para metas financeiras
    match /metas/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Regras para orçamentos
    match /orcamentos/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}